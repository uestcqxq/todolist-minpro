/* pages/evaluate/evaluate.wxss */
@import "/styles/common.wxss";

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--background-color);
}

.header {
  background: var(--card-background);
  padding: 16px;
}

.period-info {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 8px;
}

.status-info {
  display: flex;
  gap: 16px;
  color: var(--secondary-text);
  font-size: 14px;
}

.work-list {
  flex: 1;
  padding: 12px;
}

.work-item {
  margin-bottom: 12px;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.item-content {
  font-size: 16px;
  font-weight: 500;
}

.evaluation-form {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding-top: 16px;
}

.form-item {
  margin-bottom: 16px;
}

.label {
  display: block;
  font-size: 14px;
  color: var(--secondary-text);
  margin-bottom: 8px;
}

.status-group {
  display: flex;
  gap: 24px;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 8px 12px;
  background: var(--background-color);
  border-radius: 8px;
  font-size: 14px;
}

.form-actions {
  display: flex;
  gap: 12px;
  margin-top: 24px;
}

.form-actions .btn {
  flex: 1;
}